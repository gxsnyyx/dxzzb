/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 20px;
}
 
.tabcontent {
  width: 100%;
  background: #fff;
  display: flex;
  border-top: 1px solid #f2f5fa;
  border-bottom: 1px solid #f2f5fa;
}
 
.tabcell {
  width: 50%;
  line-height: 70rpx;
  text-align: center;
  font-size: 26rpx;
  position: relative;
}
 
.active {
  font-weight: bold;
}
 
.active::after {
  content: '';
  width: 80px;
  position: absolute;
  height: 4px;
  background: #2e7bfd;
  left: 50%;
  margin-left: -40px;
  bottom: 0px;
}
