/* pages/shopTrolley/shopTrolley.wxss */
.mpTabs {
  width: 50vw;
  text-align: center;
}
.card_left {
  float: left;
  padding: 25rpx;
  box-sizing: border-box;
  width: 30%;
}
.card_left image {
  width: 200rpx;
  height: 120rpx;
}
.card_right {
  float: right;
  box-sizing: border-box;
  padding-top: 25rpx;
  width: 70%;
  position: relative;
}
.mini-btn{
  position: absolute;
  right: 30rpx;
  top: 50%;
}
.card_right_desc {
  position: absolute;
  top: 25rpx;
  right: 0;
  max-width: 155rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.cardList{
  box-shadow: inset 0px -1px 4px 1px #c4c4cc;
  display: flex;
  width: 98%;
  margin: auto;
}
.tab-content{
  height: calc(100vh - 162rpx);
  position: relative;
}
.bottom-button{
  width: 100%;
  height: 120rpx;
  position: absolute;
  bottom: 0;
  text-align: right;
  border-top: 1px solid;
}
.weui-tabs-swiper{
  height: calc(100vh - 52rpx);
}
.cancelButton {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
  margin-right: 40rpx;
}